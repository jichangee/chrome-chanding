{
  "name": "禅定",
  "description": "专注工作与学习",
  "version": "0.0.1",
  "content_scripts": [
    {
      "js": ["content_scripts.js"],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage"
  ],
  "browser_action": {
      "default_title": "专注工作与学习",
      "default_icon": "icons/icon48.png",
      "default_popup": "popup.html"
  },
  "icons": { 
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "manifest_version": 2
}
